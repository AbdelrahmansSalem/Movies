<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="boxOfficeViewModel"
            type="com.android.movies.main.BoxOfficeViewModel" />

        <variable
            name="mostPopularViewModel"
            type="com.android.movies.main.MostPopularViewModel" />
    </data>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/box_office"
            android:textColor="@color/textColorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/box_office"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            listBoxOfficeData="@{boxOfficeViewModel.boxOffice}"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/most_popular"
            android:textColor="@color/textColorWhite"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/see_all"
                android:textColor="#338BD3"
                android:textAlignment="center"
                android:textStyle="bold"

                style="@style/TextAppearance.Material3.BodyLarge"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/most_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            listMostPopularData="@{mostPopularViewModel.mostPopular}"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />



    </LinearLayout>

    </ScrollView>
</layout>